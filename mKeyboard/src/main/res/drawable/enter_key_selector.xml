<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/mBrightGreen2" />
                    <corners android:radius="3dp" />
                    <size android:width="130px" android:height="80px" />
                </shape>
            </item>
            <item android:width="25px" android:height="19px" android:drawable="@drawable/ic_arrow_right" android:gravity="center" />
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/mMainGreen" />
                    <corners android:radius="3dp" />
                    <size android:width="130px" android:height="80px" />
                </shape>
            </item>
            <item android:width="25px" android:height="19px" android:drawable="@drawable/ic_arrow_right" android:gravity="center" />
        </layer-list>
    </item>
</selector>
